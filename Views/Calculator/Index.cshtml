@model List<MathCalculatorMVC.Models.Calculation>

@{
    ViewData["Title"] = "Calculator";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Calculator</title>
    <style>
        body {
            background: #f7f9fc;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 40px;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 30px;
        }

        input, select, button {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 16px;
            transition: 0.2s ease;
        }

        input:focus, select:focus {
            outline: none;
            border-color: #0077cc;
            box-shadow: 0 0 4px rgba(0,119,204,0.3);
        }

        button {
            background: #0077cc;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background: #005fa3;
        }

        table {
            border-collapse: collapse;
            width: 80%;
            max-width: 600px;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f0f0f0;
        }

        tr:hover {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <h2>ðŸ§® Simple Calculator</h2>

    <form asp-action="Calculate" method="post">
        <input type="number" name="x" step="any" placeholder="Enter X" required />
        <select name="op">
            <option value="+">+</option>
            <option value="-">âˆ’</option>
            <option value="*">Ã—</option>
            <option value="/">Ã·</option>
        </select>
        <input type="number" name="y" step="any" placeholder="Enter Y" required />
        <button type="submit">Calculate</button>
    </form>

    @if (Model.Any())
    {
        <h4>ðŸ“œ Calculation History</h4>
        <table>
            <tr>
                <th>#</th>
                <th>Expression</th>
                <th>Result</th>
            </tr>
            @foreach (var item in Model.OrderByDescending(c => c.Id))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.X @item.Operator @item.Y</td>
                    <td>= @String.Format("{0:0.#####}", item.Result)</td>
                </tr>
            }
        </table>
    }
</body>
</html>
